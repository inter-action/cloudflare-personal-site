{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "permission": {
    "bash": {
      "*": "ask",
      // read allow
      "git *": "allow",
      "npm *": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "ls *": "allow",
      "mkdir -p *": "allow",
      // deny
      "rm *": "ask",
    },
  },
}
